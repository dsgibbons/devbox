#!/bin/bash

# Run the devtools container with your home directory mounted
# Usage: ./devbox [--build] [--platform linux/amd64|linux/arm64]

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
IMAGE_NAME="devtools"
FORCE_BUILD=false
PLATFORM=""

while [[ $# -gt 0 ]]; do
    case $1 in
        --build)
            FORCE_BUILD=true
            shift
            ;;
        --platform)
            PLATFORM="$2"
            shift 2
            ;;
        *)
            shift
            ;;
    esac
done

# Build the image if it doesn't exist or --build flag is passed
if ! docker image inspect "$IMAGE_NAME" &>/dev/null || [ "$FORCE_BUILD" = true ]; then
    echo "Building '$IMAGE_NAME'..."
    if [ -n "$PLATFORM" ]; then
        docker build --platform "$PLATFORM" -t "$IMAGE_NAME" "$SCRIPT_DIR"
    else
        docker build -t "$IMAGE_NAME" "$SCRIPT_DIR"
    fi
fi

USER_ID="$(id -u)"
GROUP_ID="$(id -g)"
RUNTIME_DIR="/tmp/runtime-$USER_ID"

# Map terminal types to container-compatible equivalents with truecolor support
case "$TERM" in
    xterm-ghostty) CONTAINER_TERM="xterm-direct" ;;
    *-direct) CONTAINER_TERM="xterm-direct" ;;
    *) CONTAINER_TERM="${TERM:-xterm-256color}" ;;
esac

docker run -it --rm \
    -v "$HOME:$HOME" \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -w "$(pwd)" \
    -e HOME="$HOME" \
    -e USER="$USER" \
    -e PATH="/usr/local/bin:/usr/bin:/bin" \
    -e XDG_RUNTIME_DIR="$RUNTIME_DIR" \
    -e HOST_USER="$USER" \
    -e HOST_UID="$USER_ID" \
    -e HOST_GID="$GROUP_ID" \
    -e TERM="$CONTAINER_TERM" \
    -e COLORTERM="${COLORTERM:-truecolor}" \
    --user "$USER_ID:$GROUP_ID" \
    --group-add "$(stat -f %g /var/run/docker.sock 2>/dev/null || stat -c %g /var/run/docker.sock)" \
    --hostname devbox \
    --network host \
    "$IMAGE_NAME" fish -c '
        mkdir -p $XDG_RUNTIME_DIR && chmod 700 $XDG_RUNTIME_DIR
        echo "$HOST_USER:x:$HOST_UID:$HOST_GID::$HOME:/usr/bin/fish" >> /etc/passwd
        exec fish
    '
